{
    "name": "monbudget/v2",
    "description": "MonBudget v2.1 - Gestionnaire Financier Moderne avec Architecture MVC",
    "version": "2.1.0-dev",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "MonBudget Team",
            "email": "dev@monbudget.local"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "erusev/parsedown": "^1.7",
        "firebase/php-jwt": "^6.8",
        "monolog/monolog": "^3.5",
        "phpmailer/phpmailer": "^7.0",
        "respect/validation": "^2.2",
        "tecnickcom/tcpdf": "^6.10",
        "twig/twig": "^3.7",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "MonBudget\\": "app/",
            "MonBudget\\Controllers\\": "app/Controllers/",
            "MonBudget\\Models\\": "app/Models/",
            "MonBudget\\Core\\": "app/Core/",
            "MonBudget\\Middleware\\": "app/Middleware/"
        },
        "files": [
            "app/Core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MonBudget\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=PSR12 app/",
        "phpstan": "phpstan analyse app/ --level=8",
        "serve": "php -S localhost:8005 -t public/",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.3.14"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "monbudget": {
            "legacy-version": "1.0.0",
            "legacy-path": "../monbudget",
            "migration-ready": true
        }
    }
}
